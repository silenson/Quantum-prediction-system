{
  "name": "quantum-fortune-teller",
  "version": "1.0.0",
  "description": "基于量子计算的运势预测系统",
  "main": "main.js",
  "scripts": {
    "start": "node start.js",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "quantum",
    "fortune",
    "electron"
  ],
  "author": "Quantum Fortune Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "mathjs": "^12.3.0"
  },
  "dependencies": {
    "axios": "^1.8.2",
    "chart.js": "^4.4.1",
    "moment": "^2.30.1"
  },
  "build": {
    "appId": "com.quantum.fortuneteller",
    "productName": "量子运势预测系统",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silenson/quantum-fortune-teller.git"
  }
}
